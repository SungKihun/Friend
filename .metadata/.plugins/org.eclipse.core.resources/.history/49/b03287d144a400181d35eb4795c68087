package com.example.controller;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

import com.example.service.UserService;

import ch.qos.logback.core.net.SyslogOutputStream;
import model.User;

@RestController
//@CrossOrigin(origins = "http://192.168.5.45:3000,http://localhost:3000", maxAge = 3600)
@CrossOrigin(origins = "http://192.168.5.45:3000", maxAge = 3600)
public class UserController {

	@Autowired
	private UserService service;
	
	//사이트 정보
	@RequestMapping("/info")
	public List<model.Info> Info() {
		System.out.println(service.GetInfo());
		return service.GetInfo();
		 
	}

	//로그인
	//@GetMapping("/login")
	//public Map<String, Boolean> Login(User user) {
	@PostMapping("/login")
	public Map<String, Boolean> Login(@RequestBody User user) {
		Map<String, Boolean> map = new HashMap<>();
		map.put("success", service.LoginUser(user));
		return map;
	}
	
	//회원가입
	@PostMapping("/join")
	public Map<String, Boolean> Join(@RequestBody User user) {
		System.out.println(user.getId());
		Map<String, Boolean> map = new HashMap<>();
		map.put("success", service.SaveUser(user));
		return map;
		 
	}

	//이메일 체크
	@PostMapping("/check_email")
	public Map<String, Boolean> CheckEmail(@RequestBody User user) {
	
		System.out.println(user.getId());
		Map<String, Boolean> map = new HashMap<>();
		Boolean b = service.GetCheckEmail(user);
		System.out.println(b);
		map.put("available", b);
		return map;
	}

}
