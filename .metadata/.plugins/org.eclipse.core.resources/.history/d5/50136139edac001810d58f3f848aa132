package com.example.repository;

import java.util.List;
import java.util.Map;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import com.example.model.User;

public interface FriendsRepository extends JpaRepository<User, Integer>{
	List<User> findBySiAndGu(@Param("si") int si, @Param("gu") int gu);
//	List<User> findBySiAndGuAndGender(@Param("si") int si, @Param("gu") int gu, @Param("gender") boolean gender);
	
	@Query(value="select userid, email, gender, city, gu, intro from user", nativeQuery=true)
	public List<Map<String, Object>> searchFriend();
}
